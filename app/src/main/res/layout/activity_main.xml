<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.selfviewdemo.admin.selfviewapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="昨日收益(元)"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>

        <com.selfviewdemo.admin.selfviewapplication.SelfTextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:titlesText="0.01"
            app:titlesTextSize="35sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            app:titlesTextColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="总金额(元)"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>

        <com.selfviewdemo.admin.selfviewapplication.SelfTextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:titlesText="136.34"
            app:titlesTextSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            app:titlesTextColor="#fff"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="万份收益"
                android:textColor="#999999"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <com.selfviewdemo.admin.selfviewapplication.SelfTextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:titlesText="0.6564"
                app:titlesTextSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                app:titlesTextColor="#ff6600"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="累计收益"
                android:textColor="#999999"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <com.selfviewdemo.admin.selfviewapplication.SelfTextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:titlesText="335.12"
                app:titlesTextSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                app:titlesTextColor="#ff6600"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="20sp"
        android:text="刷   新"
        android:background="@drawable/btn_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textColor="#ff6600"/>

</LinearLayout>
